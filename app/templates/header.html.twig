<header class="flex p-3 relative overflow-hidden place-content-between">
    <div class="z-0 absolute top-0 right-0 w-full h-full">
		{% if poster_picture is defined %}
			<img src="{{poster_picture}}" alt="Series poster" class="blur-xl rotate-90 origin-top-right translate-y-2/4 w-full">
		{% else %}
			<img src="{{ asset('images/default.jpg') }}" alt="Series poster" class="blur-xl rotate-90 origin-top-right translate-y-2/4 w-full">
		{% endif %}
	</div>
	<a href="{{ path('app_default') }}" class="flex items-center z-10 font-bold text-5xl text-white">Home</a>
    <a href="{{ path('app_series_index') }}" class="flex items-center text-white ml-8 mt-5 text-2xl">Series</a>
	<div class="z-10 flex items-center gap-2 ml-auto">

		<div x-data="{ open: false }" class="relative ml-4">
			<button @click="open = !open" class="text-white focus:outline-none">
				<span class="sr-only">Toggle Menu</span>
				<svg class="h-6 w-6" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
				</svg>
			</button>

			<div x-show="open" @click.away="open = false" class="absolute top-8 right-0 mt-2 bg-gray-800 bg-opacity-50 w-48 p-4 rounded-md ">
				<a href="{{ path('app_register') }}" class="text-white">Register</a>
                <br>
				<a href="{{ path('app_login') }}" class="text-white">Login</a>
			</div>
		</div>
	</div>
</header>

<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
