{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
{% if (hall_of_fame|first) != null %}
		{% include('./header.html.twig') with {'poster_picture_id': (hall_of_fame|first).id}  %}
	{% else %}
		{% include('./header.html.twig') %}
	{% endif %}
	<img id="background" src="{{ asset("/images/showcase_background.jpg") }}" alt="Series poster" class="absolute w-full blur-sm -z-10s ">
	<div class="sm:py-10 min-[1850px]:px-64 2xl:px-32 sm:px-4  m-2">
		<div class="text-white flex flex-col items-center sm:text-6xl text-4xl font-bold sm:gap-16 gap-2 sm:pb-10 pb-2 sm:pt-16 ">
			<p  class="text-center">Serizz, the best place for your series list</p>
			<div class="flex items-center sm:gap-32 sm:flex-row flex-col sm:text-3xl text-2xl text-[--white]">
				<p>{{user_nb}}
					users</p>
				<p>{{watched_episodes}}
					watched episodes</p>
			</div>
			<div class="flex justify-center sm:gap-16 gap-2 py-6 font-normal sm:flex-row flex-col">
				<div class="justify-center bg-gradient-to-b from-transparent to-[--dark-blue]   p-2 rounded-md">
					<p class="text-center sm:text-3xl text-xl font-bold">Visualize</p>
                    <p class="text-center sm:text-xl text-sm">Keep up with the latest releases of the moment, or the most popular series on the web!</p>
				</div>
				<div class="justify-center bg-gradient-to-b from-transparent to-[--dark-blue] p-2 rounded-md">
					<p class="text-center sm:text-3xl text-xl font-bold">Subscribe</p>
                    <p class="text-center sm:text-xl text-sm">Follow your favorite series, be notified during new releases, find quickly all this in your personal space!</p>
				</div>
				<div class="justify-center bg-gradient-to-b from-transparent to-[--dark-blue] p-2 rounded-md">
					<p class="text-center sm:text-3xl text-xl font-bold">Track</p>
                    <p class="text-center sm:text-xl text-sm">With our website, always be aware of where you are at, mark the episodes viewed, and never lose track!</p>
				</div>
			</div>

		</div>


		<div>
			{{ "now"|date("j F") }}
		</div>
		{% include ('./_hallOfFame.twig') with {'hall_of_fame': hall_of_fame} %}
	</div>
	<style>
		#background {
			transform: perspective(100vw) rotateX(30deg) rotateY(8deg) rotateZ(339deg) scale(1.5) translate(20%, -20%);
			z-index: -30;
			-webkit-mask-image: linear-gradient(0deg, transparent 0%, transparent 50%,black 100%);
		}
	</style>
{% endblock %}
