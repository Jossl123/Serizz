{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="flex items-center justify-between center">
        <h1 class="text-4xl font-bold pl-4 pt-4 mb-2 mr-2">
            Website
            <span class="text-2xl ml-6">Series</span>
        </h1>

        <div class="mr-2">
            <nav x-data="{ open: false }">
                <button class="text-black w-12 h-12 relative focus:outline-none" @click="open = !open">
                    <span class="sr-only">Open main menu</span>
                    <div class="block w-5 absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2">
                        <span aria-hidden="true" class="block absolute h-1 w-6 bg-current transform transition duration-500 ease-in-out"
                            :class="{'rotate-45': open,' -translate-y-1.5': !open }"></span>
                        <span aria-hidden="true" class="block absolute  h-1 w-6 bg-current mt-0.5 transform transition duration-500 ease-in-out"
                            :class="{'opacity-0': open } "></span>
                        <span aria-hidden="true" class="block absolute  h-1 w-6 bg-current mt-1 transform  transition duration-500 ease-in-out"
                            :class="{'-rotate-45': open, ' translate-y-1.5': !open}"></span>
                    </div>
                </button>
            </nav>
        </div>
    </div>

    <div class="text-5xl text-center pt-100">
        <p>Welcome</p>
    </div>

    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
{% endblock %}
