{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% include('./header.html.twig') %}
    <div>

        <div class="bg-[--dark-blue] py-20 w-fit">
            <form action="" method="get">
                <div class="rounded-full bg-[--grey] m-2 flex px-2  py-1 items-center">
                    <label>
                        <input type="text" class="bg-transparent" name="search"/>
                    </label>
                    <input type="submit" value="">
                    <i class="nf nf-fa-search text-white"></i>
                </div>
            </form>
        </div>

        <div class="text-xl flex items-center flex-col">

            <script src="https://cdn.tailwindcss.com"></script>

            <div class="relative inline-block my-2.5">
                <span class="text-2xl md:text-3xl font-bold">
                    User Index
                </span>
                <span class="absolute -bottom-1 left-0 w-full h-1 bg-gradient-to-r from-indigo-900 via-sky-800 to-blue-600 rounded-full"></span>
            </div>

            {% include('./pagination.html.twig') with {'app_path': "app_user_index", "pagesNb": pagesNb} %}
            
            <table class="text-sm text-center">
                <thead class="text-xs uppercase bg-gray-700 ">
                    <tr class="">
                        <th class="px-6 py-3"> Name </th>
                        <th class="px-6 py-3"> Email </th>
                        {% if ( app.user ) and (app.user.admin != 0) %}
                            <th class="px-6 py-3"> Register Date </th>
                            <th class="px-6 py-3"> Country </th>
                            <th class="px-6 py-3"> Admin </th>
                        {% endif %}
                        <th class="px-6 py-3"> Actions </th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="border-b transition duration-300 ease-in-out border-neutral-500 hover:bg-sky-900 bg-gray-800">
                        <td class="x-6 py-4 font-medium  whitespace-nowrap text-white">{{ user.name }}</td>
                        <td class="x-6 py-4 font-medium  whitespace-nowrap text-white">{{ user.email }}</td>
                        {% if ( app.user ) and ( app.user.admin != 0 ) %}
                            <td class="x-6 py-4 font-medium  whitespace-nowrap text-white">{{ user.registerDate ? user.registerDate|date('Y-m-d H:i:s') : '' }}</td>
                            <td class="x-6 py-4 font-medium  whitespace-nowrap text-white">{{ user.country }}</td>
                            <td class="x-6 py-4 font-medium  whitespace-nowrap text-white">{{ user.admin }}</td>
                        {% endif %}
                        <td class="font-medium text-blue-600 hover:underline">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}"> SHOW | </a>
                            {% if ( app.user ) and ( app.user.admin != 0 ) %}
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}"> EDIT | </a>
                                <a href="{{ path('app_default', {'_switch_user':user.email}) }}"> EMBODY </a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% include('./pagination.html.twig') with {'app_path': "app_user_index", "pagesNb": pagesNb} %}

            <div class="flex flex-row">
                {% if app.user %}
                    {% if app.user.admin != 0 %}
                    <a href="{{ path('app_user_new') }}" class="mx-2.5 mt-6 text-xl inline-flex items-center justify-center p-5 font-medium rounded-lg bg-gray-800 hover:bg-gray-700 hover:text-white">
                        Create new
                    </a>
                    {% endif %}
                {% endif %}
                {% if search != "" %}
                    <a href="{{ path('app_user_index') }}" class="mt-6 text-xl inline-flex items-center justify-center p-5 font-medium rounded-lg bg-gray-800 hover:bg-gray-700 hover:text-white">
                        Back to All
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
