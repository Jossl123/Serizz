{% extends 'base.html.twig' %}

{% block title %} Edit Information {% endblock %}

{% block body %}

{% include 'header.html.twig' %}

    <div class="flex justify-center mt-4">
        <form method="post">

            <label>
                Name :
                <input name="name" placeholder="{{ user.name }}">
            </label>

            <label>
                Email :
                <input name="email" placeholder="{{ user.email }}" readonly>
            </label>

            <label>
                Password :
                <input name="password" placeholder="********">
            </label>

            <label>
                Confirm Password :
                <input name="confirm_password" placeholder="********">
            </label>

            <label>
                Country :
                <select name="country">
                    <option disabled selected> {{ user.country.name }} </option>
                    {% for country in countries %}
                        {% if country.name != user.country.name %}
                            <option value="{{ country.name }}"> {{ country.name}} </option>
                        {% endif %}
                    {% endfor %}
                </select>
            </label>

            <button type="submit"> Save Changes </button>

        </form>
    </div>

{% endblock %}