{% extends 'base.html.twig' %}

{% block title %}Followed series
{% endblock %}

{% block body %}
	{% if (series|first) != null %}
		{% include('./header.html.twig') with {'poster_picture_id': (series|first).id}  %}
	{% else %}
		{% include('./header.html.twig') %}
	{% endif %}
	<div class="flex gap-2 justify-center p-2">
		{% if page > 0 %}
			<a href="{{ path('app_series_show_followed', {'page': page - 1}) }}"><-</a>
		{% endif %}
		{% for i in 0..pagesNb-1 %}
			<a href="{{ path('app_series_show_followed', {'page': i}) }}" class="px-1 w-6 flex justify-center items-center {% if i == page %} rounded bg-cyan-600  {% endif %}">{{ i + 1}}</a>
		{% endfor %}
		
		{% if page < pagesNb-1 %}
			<a href="{{ path('app_series_show_followed', {'page': page + 1}) }}">-></a>
		{% endif %}
	</div>
	<div class="px-64">
		<h1 class="text-3xl font-bold p-2 m-5">Your followed series</h1>
		{% if (series|first) != null %}
			<div class="flex flex-wrap px-32">
				{% for serie in series %}
                    <div class="flex gap-0 flex relative group overflow-hidden w-1/5 m-4">
						<a href="{{ path('app_series_show', {'id': serie.id}) }}" >
							<img src="{{ path('app_series_poster', {'id': serie.id}) }}" alt="Series poster" class="w-auto h-full object-cover max-w-48 ">
						</a>
                        {% include('./follow.html.twig') with {'serie': serie} %}
                    </div>
				{% endfor %}
			</div>
		{% else %}
			<h2 class="text-xl font-bold p-2 m-3">You do not follow any series</h2>
		{% endif %}
	</div>
{% endblock %}
