{% extends 'base.html.twig' %}

{% block title %}Series index{% endblock %}

{% block body %}
	{% include('./header.html.twig')  %}

    {% if page > 0 %}<a href="{{ path('app_series_index', {'page': page - 1}) }}"><-</a>{% endif %}
    {% for i in 0..pagesNb %}
        <a href="{{ path('app_series_index', {'page': i}) }}">{{ i }}</a>
    {% endfor %}
    {% if page < pagesNb-1 %}<a href="{{ path('app_series_index', {'page': page + 1}) }}">-></a>{% endif %}
    {% for series in series %}
        <div class="flex p-2">
            <a href="{{ path('app_series_show', {'id': series.id}) }}" class="w-64">
                <img src="{{ path('app_series_poster', {'id': series.id}) }}" alt="Series poster" class="w-auto h-full object-cover max-w-48 ">
            </a>
            <div class="p-2">
                <h1>{{ series.title }}</h1>
                <p>{{ series.plot }}</p>
                <p>{{ series.imdb }}</p>
                <p>{{ series.director }}</p>
                <p>{{ series.youtubeTrailer }}</p>
                <p>{{ series.awards }}</p>
                <p>{{ series.yearStart }}</p>
                <p>{{ series.yearEnd }}</p>
            </div>
        </div>
    {% else %}
        <div>
            <p >no records found</p>
        </div>
    {% endfor %}
{% endblock %}
