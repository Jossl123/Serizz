{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <script>
        window.onload = function() {
            //document.querySelector('input[name="registration_form[email]"]').focus();
            const windowWidth = window.innerWidth;
            const windowHeight = window.innerHeight;

            const section = document.getElementById('sec');
            const sectionWidth = section.offsetWidth;
            const sectionHeight = section.offsetHeight;

            section.style.marginLeft = (windowWidth - sectionWidth) / 2 + 'px';
            section.style.marginTop = (windowHeight - sectionHeight) / 2 + 'px';
        }
    </script>

    <style>
        body{
            background-color: #030516;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #fff;
        }

        h1{
            font-size: 2rem;
            font-weight: 400;
            line-height: 1.2;
        }

        section {
            background-color: #060b39;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            width: 100%;
            max-width: 20vw;
            padding: 1vw;
            -webkit-box-shadow: 0 0 5px 4px rgba(36,43,102,1);
            -moz-box-shadow: 0 0 5px 4px rgba(36,43,102,1);
            box-shadow: 0 0 5px 4px rgba(36,43,102,1);
        }

        input {
            display: block;
            margin-bottom: 10px;
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
            font-size: 2rem;
            line-height: 1.5;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
        }

        button {
            margin-top: 1vh;
            margin-left: 7vw;
            background-color: #007bff;
            border-radius: 0.25rem;
            border: 1px solid #007bff;
            color: #fff;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            padding: 0.375rem 0.75rem;
            text-align: center;
        }

        button:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        input::placeholder {
            color: #6c757d;
            opacity: 1;
            font-size: 1.5rem;
        }
    </style>

    <section id="sec">

        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.name, {
            'attr': {
                'placeholder': 'Your name'
            }
        }) }}

        {{ form_row(registrationForm.email, {
            'attr': {
                'placeholder': 'name@example.com'
            }
        }) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            'attr': {
                'placeholder': '**********'
            }
        }) }}

        <button type="submit" class="btn"> Register </button>

        {{ form_end(registrationForm) }}

    </section>

{% endblock %}
